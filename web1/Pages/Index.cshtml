@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    body {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        background-color: #ffffffdd;
        border-radius: 20px;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .btn-primary {
        background-color: #2575fc;
        border-color: #2575fc;
    }

        .btn-primary:hover {
            background-color: #1a5ed8;
            border-color: #1a5ed8;
        }

    .icon-style {
        font-size: 4rem;
        color: #2575fc;
        animation: pop 1s ease-out;
    }


        transform: scale(0.8);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }

    .animate-fade {
        animation: fadeInUp 1s ease-out;
    }

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    a {
        text-decoration: underline;
    }
</style>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg border-0 animate-fade">
                    <div class="card-body text-center p-5">
                        <div class="mb-4">
                            <div class="icon-style"></div> 
                        </div>
                        <h1 class="display-5 fw-bold mb-3 text-dark">¡Bienvenido a tu app ASP.NET Core!</h1>
                        <p class="lead mb-4 text-secondary">
                            Aprende a crear aplicaciones web modernas, rápidas y seguras con
                            <a href="https://learn.microsoft.com/aspnet/core" class="text-primary" target="_blank" rel="noopener">
                                ASP.NET Core
                                
                            </a>.
                        </p>
                        <a href="https://learn.microsoft.com/aspnet/core" class="btn btn-primary btn-lg px-4">
                            Empezar ahora
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
